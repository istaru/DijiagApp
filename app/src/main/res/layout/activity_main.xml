<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        layout="@layout/view_pager" />

    <include
        layout="@layout/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_above="@+id/com_tab" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/com_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_alignParentBottom="true"
        android:background="@color/b_white"
        app:tl_iconHeight="@dimen/dp_23"
        app:tl_iconWidth="@dimen/dp_23"
        app:tl_indicator_color="#F297DE"
        app:tl_indicator_height="0dp"
        app:tl_textSelectColor="#FE4F3E"
        app:tl_textUnselectColor="#4D4D4D"
        app:tl_textsize="@dimen/sp_13"
        app:tl_underline_color="#DDDDDD"
        app:tl_underline_height="@dimen/dp_1" />

</RelativeLayout>
