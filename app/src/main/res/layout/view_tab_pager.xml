<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/sli_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        app:tl_divider_color="@color/white"
        app:tl_divider_padding="@dimen/dp_13"
        app:tl_divider_width="@dimen/dp_1"
        app:tl_indicator_color="@color/app_color"
        app:tl_indicator_height="@dimen/dp_2"
        app:tl_indicator_width_equal_title="true"
        app:tl_tab_padding="@dimen/dp_21"
        app:tl_textSelectColor="@color/app_color"
        app:tl_textUnselectColor="@color/black" />

    <include
        layout="@layout/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sli_tab" />

</RelativeLayout>
